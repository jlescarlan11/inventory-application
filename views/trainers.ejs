<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokémon Trainers - <%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .pokemon-type {
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.9em;
        margin-right: 5px;
      }
      .type-normal {
        background-color: #a8a878;
      }
      .type-fire {
        background-color: #f08030;
      }
      .type-water {
        background-color: #6890f0;
      }
      /* Add more type colors as needed */
    </style>
  </head>
  <body class="bg-light">
    <div class="container mt-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
          <a class="navbar-brand" href="/trainers">Pokémon Trainers</a>
          <div class="navbar-nav">
            <a class="nav-link" href="/trainers/create">New Trainer</a>
            <a class="nav-link" href="/trainers/search">Search</a>
          </div>
        </div>
      </nav>

      <% if (messages.success) { %>
      <div class="alert alert-success"><%= messages.success %></div>
      <% } %> <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
      <% } %>

      <h2 class="mb-4">All Trainers</h2>

      <% if (trainers.length === 0) { %>
      <div class="alert alert-info">No trainers found. Create one!</div>
      <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% trainers.forEach(trainer => { %>
        <div class="col">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">
                <%= trainer.name %>
                <span class="badge bg-secondary"
                  ><%= trainer.pokemons.length %>/6</span
                >
              </h5>

              <% if (trainer.pokemons.length > 0) { %>
              <div class="pokemon-list mt-3">
                <% trainer.pokemons.forEach(pokemon => { %>
                <div class="d-flex align-items-center mb-2">
                  <div class="flex-grow-1">
                    <strong><%= pokemon.name %></strong>
                    <div class="types mt-1">
                      <% pokemon.types.forEach(type => { %>
                      <span class="pokemon-type type-<%= type.toLowerCase() %>">
                        <%= type %>
                      </span>
                      <% }); %>
                    </div>
                  </div>
                </div>
                <% }); %>
              </div>
              <% } else { %>
              <p class="text-muted">No Pokémon in inventory</p>
              <% } %>
            </div>
            <div class="card-footer bg-transparent">
              <a
                href="/trainers/<%= trainer.id %>"
                class="btn btn-sm btn-outline-primary"
              >
                View Details
              </a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
